@page
@model RazorPages.Pages.Employees.AddModel
@{
	var message = ViewData["message"]?.ToString();
}
<form method="Post">

<h1 class="mb-3">Add new employee</h1>
 <div class="mb-3">
	 @if  (!string.IsNullOrWhiteSpace(message))
		{
			<div class="alert alert-success" role="alert">
				@message
				</div>
		}

	 <label class="form-label"> Name </label>
	 <input type="text" class="form-control" asp-for="AddEmployeeRequest.Name"/> 
		 
 </div>

<div class="mb-3">

	<label class="form-label"> Email </label>
	<input type="email" class="form-control" asp-for="AddEmployeeRequest.Email" />

</div>
<div class="mb-3">

	<label class="form-label"> Salary </label>
	<input type="number" class="form-control" asp-for="AddEmployeeRequest.salary" />

</div>

<div class="mb-3">

	<label class="form-label"> DOB </label>
	<input type="date" class="form-control" asp-for="AddEmployeeRequest.dob"/>

</div>
<div class="mb-3">

	<label class="form-label"> Department </label>
	<input type="text" class="form-control" asp-for="AddEmployeeRequest.department"/>

</div>

<div class="mb-3">

	 <button type="submit" class="btn-primary"> Save</button>

</div>
</form>